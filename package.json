{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "A comprehensive TODO management application with CLI and desktop GUI interfaces",
  "main": "src/gui/main.js",
  "bin": {
    "todo": "./src/cli/index.js"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "cli": "node src/cli/index.js",
    "test": "jest"
  },
  "keywords": [
    "todo",
    "task-management",
    "cli",
    "electron",
    "desktop-app"
  ],
  "author": "Raj Kumar",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^8.7.0",
    "commander": "^11.1.0",
    "date-fns": "^2.30.0",
    "electron": "^27.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.7",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.6",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.raj.todo-app",
    "productName": "Todo App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}